<div class="pb-index-wrapper pb-container">
  <p id="notice"><%= notice %></p>
  <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span> <%= link_to "Back", :back %>
  
  <h1>已建立課程</h1>

  <table class="table .table-striped .table-hover">
    <thead>
      <tr>
        <th>Teacher</th>
        <th>Title</th>
        <th>Overview</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @courses.each do |course| %>
        <tr>
          <td><%= course.teacher_id %></td>
          <td><%= course.title %></td>
          <td><%= course.overview %></td>
          <td><button type="button" class="btn btn-default"><%= link_to '課程內容', course %></button></td>
          <td><button type="button" class="btn btn-default"><%= link_to '編輯', edit_course_path(course) %></button></td>
          <td><button type="button" class="btn btn-danger"><%= link_to '刪除', course, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <button type="button" class="btn btn-default"><%= link_to '建立新課程', new_course_path %></button>
</div>
