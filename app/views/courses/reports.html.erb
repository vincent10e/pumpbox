

<div class="pb-index-wrapper pb-container">
  <p id="notice"><%= notice %></p>

  

  <div class="row">
    <div class="col-md-8">
      <h2>
        <strong>Title:</strong>
        <%= @course.title %>
      </h2>
    </div>
  </div>

  <h4>
    <strong>Overview:</strong>
    <%= @course.overview %>
  </h4>

  <p>
    <strong>Teacher:</strong>
    <%= @course.teacher_id %>
  </p>


  <div class="row">

    <div class="col-md-9 col-md-push-3">
      

      <table class="table table-striped table-hover">
        <thead>
          <h1> Teacher : <%= @teacher.username %> </h1>
          <tr>
            <th>學生</th>
            <% @concepts.each do |c| %>
              <th> <%= c.title %> </th> 
            <% end %>
          </tr>
        </thead>

        <tbody>
          <% @students.each do |student| %>
          <tr>
            <td> <%= student.username %></td>
            <% @concepts.each do |c| %>
              <td>已測驗<%= link_to(c.test_attempts.count , customized_concept_student_detail_path(c, student.user_id)) %>次</td>
            <% end %>
          <tr>
          <% end %>
        </tbody>
      </table>
      
      
    </div>
    <div class="col-md-3 col-md-pull-9">
      <div class="list-group">
        <%= render 'course_left_bar' %>
      </div>
    </div>
  </div>

</div>


