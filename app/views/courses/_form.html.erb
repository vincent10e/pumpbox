<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= simple_form_for(@course) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :group_id, as: :hidden %>
        <%= f.input :teacher_id, as: :hidden %>
        <%= f.input :education_level_id do%>
          <%= f.select :education_level_id, EducationLevel.all.map { |r| [r.title, r.id, { class: r.id }] } %>
        <% end %>

        <!-- TO - DO : modify volume into EducationLevel.volume, it should disply by dynamic form  -->
        <%= f.input :volume_id do %> 
          <%= f.select :volume_id, Volume.where(education_level_id: 2).all.map { |r| [r.title, r.number] } %>
        <% end %>

        <%= f.input :subject_id do %>
          <%= f.select :subject_id, Subject.all.map { |s| [s.title, s.id, { class: s.id }] } %>
        <% end %>

        <%= f.input :is_open, label: "是否開放課程" do %>
          <%= f.select(:is_open, options_for_select([['不開放', false], ['開放', true]])) %>
        <% end %>

        <%= f.input :image, as: :file, label: '課程圖片'%>
        <%= f.input :title, label: '課程名稱'%>
        <%= f.input :overview, label: '課程描述'%>
      </div>

      <div class="form-actions">
        <%= f.button :submit %>
      </div>
    <% end %>


  </div>
</div>


