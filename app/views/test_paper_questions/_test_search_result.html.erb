<h1> 符合"<%= @keyword %>"考題 </h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th colspan="1">考題</th>
      <th colspan="1">考題數量 </th>
      <th> 關鍵字 </th>
      <th> 選擇加入</th>
    </tr>
  </thead>

  <tbody>
    <% @test_paper_questions.each do |test| %>
      <tr>
        <td colspan="1"><button type="button" class="btn btn-primary" data-toggle="modal" data-target=".bs-example-modal-lg">預覽考卷</button></td>
        <td><%= test.test_paper_options.count %></td>
        <td><%= test.tag_list %></td>
        <td>
          <%= link_to add_test_path(@customized_concept, test.id),  data: { confirm: '確定加入此試題？' } do %>
            <i class="fa fa-plus"></i>
          <% end %>
        </td>
        <td> <%= render partial: "test_preview", locals: {test: test}%></td>
      </tr>
    <% end %>
  </tbody>
</table>


        

