  <div class="row">
    <div class="col-md-12">
      <% my_courses.each do |course| %>
        <div class="col-sm-6 col-md-4">
          <div class="thumbnail" >
            <h4 class="text-center"><span class="label label-info">Free Course</span></h4>
            <img src="http://placehold.it/650x450&text=Course name" class="img-responsive">
            <div class="caption">
              <div class="row">
                <div class=".col-md-12 col-xs-12">
                  <h5><%= link_to(course.title, course_path(course)) %></h5>
                </div>
              </div>
              <p> </p>
              <div class="row">
                <div class="col-md-6">
                  <a class="btn btn-primary btn-product"><span class="glyphicon glyphicon-thumbs-up"></span> Like</a> 
                </div>
                <div class="col-md-6">
                  <a href="#" class="btn btn-success btn-product"><span class="glyphicon glyphicon-shopping-cart"></span> Buy</a></div>
              </div>
            </div>
          </div>
        </div> 
      <% end %>  
    </div> 

    <%= paginate @courses, :window => 2, :left => 1, :right => 3 %>
  </div>

