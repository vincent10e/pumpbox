<div class="pb-course-wrapper pb-container"> 

  <div class="row">
    <div class="col-md-9 col-md-push-3">
      <div class="course-video-wrapper">
        <%= youtube_embed(@customized_concept.video) %>
      </div>
      <nav>
        <ul class="pager">
          <li><%= link_to_previous_page @customized_concept_paginated, '上一個觀念' %></li>
          <li><%= link_to_next_page @customized_concept_paginated, '下一個觀念' %></li>
        </ul>
      </nav>
      <div class="course-options">
        <div class="button-wrapper">
          <%= link_to("顯示", @customized_concept.lecture.url, class: "course-btn") if @customized_concept.lecture? %>
        </div>
        <div class="button-wrapper">
          <%= link_to("開始自我挑戰", new_customized_concept_test_attempt_path(@customized_concept), class: "course-btn") %>
        </div>
        
      </div>
    </div>
    <div class="col-md-3 col-md-pull-9">
      <p id="notice"><%= notice %></p>
      <%= link_to("編輯", edit_course_customized_concept_path(@course, @customized_concept)) %>
      <h2 class="course-title">
        <%= @customized_concept.title %>
      </h2>

      <h4>
        <%= @customized_concept.description %>
      </h4>

      <%= render 'customized_concepts/index', locals: {customized_concepts: @customized_concepts} %>
    </div>
  </div>



</div>



